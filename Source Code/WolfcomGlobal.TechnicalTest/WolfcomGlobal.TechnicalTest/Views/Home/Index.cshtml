@{
    ViewBag.Title = "Billing Page";
}
@model WolfcomGlobal.CoreLib.Model.BillViewModel

<div class="row">
    <div class="col-md-4" style="margin-left:40%;padding-top:10%">
        <h4>Bill Calculation Form</h4>      
        <form id="FindBilledAmount">
            <div class="form-group">
                <label for="exampleFormControlInput1">Number of Customers</label>

                @Html.TextBoxFor(Model=>Model.NumberofCustomers, new {@required = "required", @type = "number", @class = "form-control" }) 
            </div>
            <div class="form-group">
                <label for="exampleFormControlSelect1">Price per Person</label>
                
                @Html.TextBoxFor(Model => Model.AmountPerPerson, new { @required = "required", @type = "number", @class = "form-control" }) 
            </div>
            <div class="form-group">
                <label for="exampleFormControlSelect2">Coupan Code</label>
                
                @Html.TextBoxFor(Model => Model.PromoCode, new { @class = "form-control", @Value = "NONE" }) 
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
        </form>
    </div>

</div>